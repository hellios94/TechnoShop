@model CategoryRemoveViewModel
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete @Model.Name</h2>
<br />
<br />
<p><h2 class="text-center">Are You Sure?</h2></p>
<form asp-area="Admin" asp-controller="Categories" asp-action="RemoveCategory" asp-route-id="@Model.Id" method="post" class="form-horizontal">
    <div class="form-group">
        <div class="col-sm-10 col-sm-push-5">
            <br />
            <br />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="btn btn-warning">Cancel</a>
        </div>
    </div>
</form>
