@model ProductRemoveViewModel
@{
    ViewData["Title"] = "Изтрий " + Model.ModelName;
}

<h2 class="text-center">Изтрий @Model.ModelName</h2>
<br />
<br />
<p><h2 class="text-center">Сигурени ли сте?</h2></p>
<form asp-area="Admin" asp-controller="Products" asp-action="RemoveProduct" asp-route-id="@Model.Id" asp-route-slug="@Model.Slug" method="post" class="form-horizontal">
    <div class="form-group">
        <div class="col-sm-10 col-sm-push-5">
            <br />
            <br />
            <input type="submit" value="Изтрий" class="btn btn-danger fa fa-trash" />
            <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="btn btn-warning fa fa-arrow-left">Отказ</a>
        </div>
    </div>
</form>

