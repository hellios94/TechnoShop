@model BanUserViewModel
@{
    ViewData["Title"] = "Ban " + Model.UserName;
}
<br />
<h2 class="text-center">Ban @Model.UserName</h2>
<br />
<br />
<p><h2 class="text-center">Are You Sure?</h2></p>
<form asp-area="Admin" asp-controller="User" asp-action="Ban" asp-route-id="@Model.Id" asp-route-userName="@Model.UserName" method="post" class="form-horizontal">
    <div class="form-group">
        <div class="col-sm-10 col-sm-push-5">
            <br />
            <br />
            <input type="submit" value="Ban" class="btn btn-danger fa fa-ban" />
            <a asp-area="Admin" asp-controller="User" asp-action="Index" class="btn btn-warning fa fa-arrow-left">Cancel</a>
        </div>
    </div>
</form>