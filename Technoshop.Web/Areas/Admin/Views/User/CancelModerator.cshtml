@model CancelModeratorViewModel
@{
    ViewData["Title"] = "Cancel Moderator " + Model.UserName;
}
<br />
<h2 class="text-center">Cancel the of Moderator of @Model.UserName</h2>
<br />
<br />
<p><h2 class="text-center">Are You Sure?</h2></p>
<form asp-area="Admin" asp-controller="User" asp-action="CancelModerator" asp-route-id="@Model.Id" asp-route-role="Moderator" method="post" class="form-horizontal">
    <div class="form-group">
        <div class="col-sm-10 col-sm-push-5">
            <br />
            <br />
            <input type="submit" value="Remove the Role" class="btn btn-danger fa fa-user-times" />
            <a asp-area="Admin" asp-controller="User" asp-action="Index" class="btn btn-warning fa fa-arrow-left">Cancel</a>
        </div>
    </div>
</form>