@model ProductEditBindingModel

<div class="form-group row">
    <label asp-for="Description" class="col-form-label col-sm-2 font-weight-bold">Описание</label>
    <div class="col-sm-10 col-sm-push-2">
        <textarea asp-for="Description" rows="4" cols="50" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="ProductImageUrl" class="col-form-label col-sm-2 font-weight-bold">Линк към Снимка на продукта</label>
    <div class="col-sm-10 col-sm-push-2">
        <input type="url" asp-for="ProductImageUrl" class="form-control" />
        <span asp-validation-for="ProductImageUrl" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="Price" class="col-form-label col-sm-2 font-weight-bold">Цена</label>
    <div class="col-sm-10 col-sm-push-2">
        <input type="number" asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
</div>